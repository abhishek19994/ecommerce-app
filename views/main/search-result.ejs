<%- layout('layout') -%>

<br/><br/><br/>
<% if (data.length===0) { %>

<h3><strong>Search not found</strong></h3>
<% }else{%>

<h3>Search Results for <%= query %></h3>

<div class ="container">
<div class="row" >

<% for (var i=0;i<data.length;i++) {%>
<div class="col-md-4">
<a href="/product/<%= data[i]._id %>">
<div class="thumbnail">
<img src="<%= data[i]._source.image %>" height="300" width="300" >
<div class ="caption" style = "font-family:georgia,garamond,serif;color:Black;">
<h3><strong> <%= data[i]._source.name %></strong></h3>
<p><%= data[i]._source.category.name %></p>
<p><%= data[i]._source.price %></p>
</div>
</div>
</a>
</div>
<% } %>
<% }%>
</div>
</div>
