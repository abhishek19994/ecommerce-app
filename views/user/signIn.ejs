<% - layout('layout') -%>
 rel="stylesheet" id="bootstrap-css">
<link rel="stylesheet" href="/static/css/signUp.css">
	<% if (errors.length>0){ %>
	<div class ="alert alert-danger alert-dismissible" style="margin-right:800px">
	<button type="button" class="close" data-dismissible="alert" aria-label="Close">
	<span aria-hidden ="true" >&times;</span>
	</button>
	<%- errors -%>
	</div>
 	<% }%>
    <div class="container" style="margin-top:100px;margin-left:500px">
   
 	
		<div class="row">
			<div class="col-sm-6 col-md-4 col-md-offset-4">
				<div class="panel panel-default">
					<div class="panel-heading" style="margin-left:50px">
						<strong> Sign In to continue</strong>
					</div>
					<div class="panel-body">
						<form role="form" action="/signIn" method="POST">
							<fieldset>
								

								<div class="row">
									<div class="col-sm-12 col-md-10  col-md-offset-1 ">
										<div class="form-group">
											<div class="input-group">
												<span class="input-group-addon">
													<i class="glyphicon glyphicon-user"></i>
												</span> 
												<input class="form-control" placeholder="Email" name="email" type="text" autofocus>
											</div>
										</div>
										
										<div class="form-group">
											<div class="input-group">
												<span class="input-group-addon">
													<i class="glyphicon glyphicon-lock"></i>
												</span>
												<input class="form-control" placeholder="Password" name="password" type="password" value="">
											</div>
										</div>
										
										
										<div class="form-group">
											<input type="submit" class="btn btn-lg btn-primary btn-block" value="Sign In" >
										</div>
										<div style="margin-left:100px">
											OR
										</div>	
										</div>
								</div>
							</fieldset>
						</form>
									<div style="margin-right:60px">
										 <a class="btn btn-block btn-social btn-google" href="/auth/google">
    <span class="fa fa-google"></span> Sign in with Google
  </a>
										</div>
										</div>
									
					</div>
					<div class="panel-footer ">
						Don't have an account! <a href="/signUp" onClick=""> Sign Up Here </a>
						
					</div>
                </div>
			</div>
		</div>

	</div>
